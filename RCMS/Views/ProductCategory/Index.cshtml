@{
    ViewBag.Title = "产品分类管理";
}

<div class="row">
    <div class="col-md-6">
        <div class="box box-danger">
            <div class="box-header with-border">
                产品分类
            </div>
            <div class="box-body">
                <div id="treeContainer" class="ztree">

                </div>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="box box-primary">
            <div class="box-header with-border">
                <div class="box-title">
                    分类管理
                </div>
                <div class="box-tools pull-right">
                    <button type="button" class="btn btn-box-tool" data-widget="collapse">
                        <i class="fa fa-minus"></i>
                    </button>
                </div>
            </div>
            <form class="form-horizontal" id="form_base" method="post">
                <div class="box-body">
                    <div class="form-group">
                        <label class="col-sm-2 control-label">当前分类</label>
                        <div class="col-sm-10">
                            <p data-role="cName" class="form-control-static text-danger text-bold">请选择当前分类!</p>
                            <input type="hidden" name="CategoryId" id="CategoryId" />
                            <input type="hidden" name="CurrentCode" id="CurrentCode">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="CategoryName" class="col-sm-2 control-label">分类名称</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" name="CategoryName" id="CategoryName" placeholder="请输入分类名称">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="SortId" class="col-sm-2 control-label">排序</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" name="SortId" id="SortId" placeholder="请输入序号">
                        </div>
                    </div>
                </div><!-- /.box-body -->
                <div class="box-footer">
                    <div class="row">
                        <div class="col-md-3">
                            <button type="submit" class="btn btn-block btn-primary btn-flat" data-role="addChildCategory">添加子级分类</button>
                        </div>
                        <div class="col-md-3">
                            <button type="submit" class="btn btn-block btn-success btn-flat" data-role="addCategory">添加同级分类</button>
                        </div>
                        <div class="col-md-3">
                            <button type="submit" class="btn btn-block btn-warning btn-flat" data-role="updateCategory">更新</button>
                        </div>
                        <div class="col-md-3">
                            <a class="btn btn-block btn-danger btn-flat" data-role="deleteCategory">删除</a>
                        </div>
                    </div>

                </div><!-- /.box-footer -->
            </form>
        </div>
    </div>
</div>
@section css{
    
<link href="~/js/plugins/layer/skin/layer.css" rel="stylesheet" />
    }
@section js{
    
<link href="~/js/plugins/zTree/css/metroStyle/metroStyle.css" rel="stylesheet" />
<script src="~/js/plugins/zTree/js/jquery.ztree.all.min.js"></script>
<script src="~/js/controller/ProductCategory.js"></script>
<script src="~/js/plugins/layer/layer.js"></script>
    }
